<div class="p-4 space-y-4">
    <ContentPanel @title="Details" @open={{true}} @pad={{true}} @panelBodyClass="bg-white dark:bg-gray-900">
        <div class="grid grid-cols-2 gap-2 text-xs dark:text-gray-100">
            <div class="field-info-container">
                <div class="field-name">Name</div>
                <div class="field-value">{{n-a @vehicle.display_name}}</div>
            </div>
            <div class="field-info-container">
                <div class="field-name">Plate Number</div>
                <div class="field-value">{{n-a @vehicle.plate_number}}</div>
            </div>
            <div class="field-info-container">
                <div class="field-name">VIN Number</div>
                <div class="field-value">{{n-a @vehicle.vin}}</div>
            </div>
            <div class="field-info-container">
                <div class="field-name">Make</div>
                <div class="field-value">{{n-a @vehicle.make}}</div>
            </div>
            <div class="field-info-container">
                <div class="field-name">Model</div>
                <div class="field-value">{{n-a @vehicle.model}}</div>
            </div>
            <div class="field-info-container">
                <div class="field-name">Year</div>
                <div class="field-value">{{n-a @vehicle.year}}</div>
            </div>
            <div class="field-info-container col-span-3">
                <div class="field-name">
                    Coordinates
                </div>
                <div class="field-value">
                    {{point-coordinates @vehicle.location}}
                </div>
            </div>
        </div>
    </ContentPanel>

    <ContentPanel @title="Avatar" @open={{true}} @pad={{true}} @panelBodyClass="bg-white dark:bg-gray-800">
        <div class="p-4">
            <img alt={{@vehicle.displayName}} src={{@vehicle.avatar_url}} class="w-24 h-24" />
        </div>
    </ContentPanel>
</div>